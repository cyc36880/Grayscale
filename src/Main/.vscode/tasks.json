{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Build (Debug, Quiet)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/src/build/Debug",
        "--",
        "--quiet"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "使用 cmake --build 进行构建，并安静输出"
    }
  ]
}
